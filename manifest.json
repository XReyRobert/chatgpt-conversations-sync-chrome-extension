{
  "manifest_version": 3,
  "name": "ChatGPT Local Sync",
  "version": "1.1.0",
  "description": "Keep ChatGPT conversations synced to a local folder.",
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "ChatGPT Local Sync",
    "default_popup": "popup.html"
  }
}
